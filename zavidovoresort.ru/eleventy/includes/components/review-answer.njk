<div class="review-answer">
    <div class="review-answer__review-top">
        <div class="review-answer__wrapper-name">
            <div class="review-answer__wrapper-img">
                <picture>
                    <source
                    srcset="/assets/images/user/{{ params.images.webp }}, /assets/images/user/{{ params.images.webp2x }} 2x"
                    type="image/webp">
                    <img
                    srcset="/assets/images/user/{{ params.images.img }}, /assets/images/user/{{ params.images.img2x }} 2x"
                    src="/assets/images/user/{{ params.images.img }}"
                    loading="lazy" alt="Error404" width="32"
                     height="32" class="review-answer__img" >
                </picture>
            </div>
            <span class="review-answer__name">{{ params.name }}</span>
        </div>
        <span class="review-answer__date">{{ params.data }}</span>
    </div>
    <div class="review-answer__review-text">
        {{ params.review }}
    </div>
</div>